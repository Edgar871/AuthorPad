<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:background="#2300BCD4"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Hello! Welcome To Authorpad! \nPlease feel free to contact us!"
        android:textColor="#FF9800"
        android:layout_marginBottom="50dp"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        app:srcCompat="@mipmap/ic_launcher_foreground" />

    <Button
        android:id="@+id/sendMail"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:background="#78FF9800"
        android:text="Reach Authorpad Through Email"
        android:textColor="#1C1B1B"
        android:textColorHighlight="#00000000"
        android:textColorHint="#000000"
        android:textColorLink="#252323" />


</LinearLayout>